	                    <div class="col-md-6">
	                    	{{ form_label(form.villelivraison) }}
	                    	{{ form_errors(form.villelivraison) }}
						</div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.villelivraison) }}
	                    </div>
					</div>
					<div class="col-md-6 card-form-member">
						<div class="col-md-12">
							<h4 class="form-subtitle">Coordonées Facturation : </h4>
						</div>
						<div class="col-md-6">
							{{ form_label(form.adressefactu) }}
	                    	{{ form_errors(form.adressefactu) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.adressefactu) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.cpfactu) }}
	                    	{{ form_errors(form.cpfactu) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.cpfactu) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.villefactu) }}
	                    	{{ form_errors(form.villefactu) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.villefactu) }}
	                    </div>
					</div>
				</div>

			{{ form_end(form) }}
		</div>
	</div>
