{% extends 'base.html.twig' %}

{% block body %}
	<div class="col-md-12">
		<h3 class="form-title">Créer un nouvel Utilisateur : </h3>
	</div>
	<div class="col-md-12">
		<div class="col-md-12 form-add-member">
			{{ form_start(form) }}

				<div class="col-md-12">
					<div class="col-md-6 card-form-member left-card">
						<div class="col-md-12">
							<h4 class="form-subtitle">Informations Principales : </h4>
						</div>
						<div class="col-md-6">
							{{ form_label(form.type) }}
	                    	{{ form_errors(form.type) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.type) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.username) }}
	                    	{{ form_errors(form.username) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.username) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.plain_password) }}
	                    	{{ form_errors(form.plain_password) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.plain_password) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.email) }}
	                    	{{ form_errors(form.email) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.email) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.nom) }}
	                    	{{ form_errors(form.nom) }}
	                    </div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.nom) }}
	                    </div>
					</div>
					<div class="col-md-6 card-form-member">
						<div class="col-md-12">
							<h4 class="form-subtitle">Informations Complémentaires : </h4>
						</div>
						<div class="col-md-6">
							{{ form_label(form.telephone) }}
                    		{{ form_errors(form.telephone) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_widget(form.telephone) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_label(form.mailbis) }}
                    		{{ form_errors(form.mailbis) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_widget(form.mailbis) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_label(form.logo) }}
                    		{{ form_errors(form.logo) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_widget(form.logo) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_label(form.infos) }}
                    		{{ form_errors(form.infos) }}
                    	</div>
	                    <div class="col-md-6">
                    		{{ form_widget(form.infos) }}
                    	</div>
					</div>
				</div>

				<div class="col-md-12">
					<div class="col-md-6  card-form-member left-card">
						<div class="col-md-12">
							<h4 class="form-subtitle">Coordonées Livraison : </h4>
						</div>
						<div class="col-md-6">
							{{ form_label(form.adresselivraison) }}
	                    	{{ form_errors(form.adresselivraison) }}
	            		</div>
	                    <div class="col-md-6">				
	                    	{{ form_widget(form.adresselivraison) }}
						</div>
	                    <div class="col-md-6">
	                    	{{ form_label(form.cplivraison) }}
	                    	{{ form_errors(form.cplivraison) }}
						</div>
	                    <div class="col-md-6">
	                    	{{ form_widget(form.cplivraison) }}
