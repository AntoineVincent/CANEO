{% extends 'base.html.twig' %}

{% block body %}
	<div class="col-md-12">
		<h3 class="prl-wlcme">Bienvenue sur votre profil {{ user.username }}</h3>
	</div>
	<div class="col-md-12">
		<div class="col-md-12 profil-card">
			<div class="col-md-2">
				<p><img class="logo-user" src="{{ asset('uploads/logo/' ~ user.logo) }}" /></p>
			</div>
			<div class="col-md-4">
				<div class="col-md-12">
					<h5 class="infos-title-prl">Informations du profil :</h5> 
				</div>
				<div class="col-md-12">
					<div class="col-md-6">
						Nom : 
					</div>
					<div class="col-md-6">
						{{ user.nom }}
					</div>
				</div>
				<div class="col-md-12">
					<div class="col-md-6">
						Telephone : 
					</div>
					<div class="col-md-6">
						{{ user.telephone }}
					</div>
				</div>
				<div class="col-md-12">
					<div class="col-md-6">
						Email : 
					</div>
					<div class="col-md-6">
						{{ user.email }}
					</div>
				</div>
				<div class="col-md-12">
					<div class="col-md-6">
						Email Bis : 
					</div>
					<div class="col-md-6">
						{{ user.mailbis }}
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="col-md-12">
					<h5 class="infos-title-prl">Coordonées :</h5> 
				</div>
				<div class="col-md-6">
					Type : 
				</div>
				<div class="col-md-6">
					{{ user.type }}
				</div>
				<div class="col-md-6">
					Adresse de facturation : 
				</div>
				<div class="col-md-6">
					{{ user.adressefactu }}<br>
					{{ user.cpfactu }}, {{ user.villefactu }}
				</div>
				<div class="col-md-6">
					Adresse de livraison : 
				</div>
				<div class="col-md-6">
					{{ user.adresselivraison }}<br>
					{{ user.cplivraison }}, {{ user.villelivraison }}
				</div>
			</div>
				<p>Infos Complémentaire : {{ user.infos }}</p>
		</div>
	</div>
	<div class="col-md-12">
		<div class="col-md-5 profil-card">
			<h3>Les produits que je suis :</h3>
			<table id="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Enchere en cours</th>
						<th>Page produit</th>
					<tr>
				</thead>
				<tbody>
					{% for favori in favoris %}
						<tr>
							<th>{{ favori.nom }}</th>
							{% if favori.enchere == 'oui' %}
								<th>Oui <span class="glyphicon glyphicon-zoom-in"></span></th>
							{% else %}
								<th>Non</th>
							{% endif %}
							<th>Voir</th>
						<tr>
					{% endfor %}
				</tbody>
			</table>

			<script>
				$(document).ready( function () {
		    		$('#table').DataTable();
				} );
			</script>
		</div>
	</div>
{% endblock %}