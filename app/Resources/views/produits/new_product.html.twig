	                   	{{ form_errors(form.commandemaximal) }}
	                </div>
	                <div class="col-md-6">
	                   	{{ form_widget(form.commandemaximal) }}
	                </div>
	                <div class="col-md-6">
						{{ form_label(form.description) }}
	                   	{{ form_errors(form.description) }}
	                </div>
	                <div class="col-md-6">
	                   	{{ form_widget(form.description) }}
	                </div>
	                <div class="col-md-6">
						{{ form_label(form.photo) }}
	                   	{{ form_errors(form.photo) }}
	                </div>
	                <div class="col-md-6">
	                   	{{ form_widget(form.photo) }}
